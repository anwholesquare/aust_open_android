<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"


    android:orientation="vertical"
    tools:context=".RoutineActivity1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="start"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:src="@drawable/hamburger1"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/applogo"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textFontWeight="400"
            android:textColor="@color/black"

            android:id="@+id/username_text_view"
            >
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We are happy knowing that you want to be an editor. Please fill up the form below and we will get back to you soon."
            >
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:padding="0dp"
                android:text="Department"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="15sp"/>
            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="Department"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="start"
                android:orientation="horizontal"
                >
                <AutoCompleteTextView
                    android:id="@+id/DepartmentDropDown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textFontWeight="600"

                    android:inputType="none"/>

            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"

                    android:layout_marginRight="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:padding="0dp"
                        android:text="Year"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>
                    <com.google.android.material.textfield.TextInputLayout

                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:hint="Year"
                        android:layout_gravity="start"
                        android:orientation="horizontal"
                        >
                        <AutoCompleteTextView
                            android:id="@+id/yearDropDown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textFontWeight="600"

                            android:inputType="none"/>

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:padding="0dp"
                        android:text="Semester"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>
                    <com.google.android.material.textfield.TextInputLayout

                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:hint="Semester"
                        android:layout_gravity="start"
                        android:orientation="horizontal"
                        >
                        <AutoCompleteTextView
                            android:id="@+id/semesterDropDown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textFontWeight="600"

                            android:inputType="none"/>

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:padding="0dp"
                        android:text="Section"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>
                    <com.google.android.material.textfield.TextInputLayout

                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:hint="Section"
                        android:layout_gravity="start"
                        android:orientation="horizontal"
                        >
                        <AutoCompleteTextView
                            android:id="@+id/sectionDropDown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textFontWeight="600"

                            android:inputType="none"/>

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:padding="0dp"
                        android:text="Group"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>
                    <com.google.android.material.textfield.TextInputLayout

                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:hint="Group"
                        android:layout_gravity="start"
                        android:orientation="horizontal"
                        >
                        <AutoCompleteTextView
                            android:id="@+id/groupDropDown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textFontWeight="600"

                            android:inputType="none"/>

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    >

                </LinearLayout>





            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:padding="7dp"
                android:text="Role"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/requestRoleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Role: CR/SR/Editor"
                android:inputType="text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <androidx.cardview.widget.CardView
                    android:layout_margin="20dp"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    app:cardBackgroundColor="@color/green"
                    app:cardCornerRadius="50dp"
                    android:id="@+id/submissionButton"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Submit"
                            android:textSize="15sp"
                            android:textFontWeight="600"
                            android:textColor="@color/white"
                            android:gravity="center"
                            >
                        </TextView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
        </LinearLayout>
    </LinearLayout>
</LinearLayout>