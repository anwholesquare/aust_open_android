<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="start"
            android:padding="5dp"
            >

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textFontWeight="600"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:padding="0dp"
                android:fontFamily="@font/poppins"
                android:text="HEY GUEST"
                />

            <TextView
                android:id="@+id/signoutBtn"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:textColor="@color/green"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_semi_bold"
                android:textFontWeight="600"
                android:translationY="-5dp"
                android:text="Sign Out"/>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            >


            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@drawable/applogo"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>








    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/vacantBtn"
            android:layout_height="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="10dp"
                    android:src="@drawable/vacant"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="9sp"
                    android:textColor="@color/black"
                    android:padding="0dp"
                    android:fontFamily="@font/poppins"
                    android:text="Vacant Classes"/>


            </LinearLayout>








        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/noticeBtn"
            android:layout_height="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="10dp"
                    android:src="@drawable/notice"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="9sp"
                    android:textColor="@color/black"
                    android:padding="0dp"
                    android:fontFamily="@font/poppins"
                    android:text="AUST Notices"/>


            </LinearLayout>








        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/infoBtn"
            android:layout_height="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="10dp"
                    android:src="@drawable/information"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="9sp"
                    android:textColor="@color/black"
                    android:padding="0dp"
                    android:fontFamily="@font/poppins"
                    android:text="Information"/>


            </LinearLayout>








        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/routineBtn"
            android:layout_height="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="10dp"
                    android:src="@drawable/routine"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="9sp"
                    android:textColor="@color/black"
                    android:padding="0dp"
                    android:fontFamily="@font/poppins"
                    android:text="Class Routine"/>


            </LinearLayout>








        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/busBtn"
            android:layout_height="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="10dp"
                    android:src="@drawable/bus"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="9sp"
                    android:textColor="@color/black"
                    android:padding="0dp"
                    android:fontFamily="@font/poppins"
                    android:text="Bus Schedule"/>


            </LinearLayout>








        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/accBtn"
            android:layout_height="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="10dp"
                    android:src="@drawable/edit_account"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="9sp"
                    android:textColor="@color/black"
                    android:padding="0dp"
                    android:fontFamily="@font/poppins"
                    android:text="My Account"/>


            </LinearLayout>








        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:padding="0dp"
            android:textFontWeight="600"
            android:fontFamily="@font/poppins"
            android:text="FEATURED"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/featuredLinearLayout"
            />

    </ScrollView>



</LinearLayout>